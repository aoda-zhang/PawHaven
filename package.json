{
  "name": "fullstack-frontend",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "22.x",
    "pnpm": ">=9"
  },
  "dependencies": {
    "@types/node": "^16.11.6"
  },
  "scripts": {
    "prepare": "husky",
    "biome:check": "biome check . --write --unsafe --files-ignore-unknown=true --no-errors-on-unmatched",
    "lint-staged": "tsc && lint-staged"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json,md}": [
      "pnpm biome:check"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "husky": "^9.1.4"
  },
  "packageManager": "pnpm@9.13.0"
}
