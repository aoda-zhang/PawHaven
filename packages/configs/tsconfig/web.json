{
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-jsx", // Enable React 17+ JSX transform
    "types": ["vite/client"], // Include Vite-specific types for HMR and environment variables
    "moduleResolution": "bundler",
    "paths": {
      "@pawhaven/ui*": ["@pawhaven/ui*"],
      "@pawhaven/i18n": ["@pawhaven/i18n"],
      "@pawhaven/theme/*": ["@pawhaven/theme/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
